{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "cross-env": "5.2.0",
        "husky": "1.3.1",
        "lint-staged": "8.1.5",
        "prettier": "1.17.0",
        "tslint": "5.16.0",
        "tslint-config-prettier": "1.18.0",
        "typescript": "3.4.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint --fix",
            "prettier --write",
            "git add"
        ]
    }
}
